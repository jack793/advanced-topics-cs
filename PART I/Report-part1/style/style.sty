\newcommand{\intestazioni}[1]{
\fancypagestyle{myfront}{
		\pagenumbering{Roman}
		\fancyhf{}
		\rhead{\emph{\MakeUppercase{#1}} }

		\rfoot{Pagina \thepage~di \pageref{LastFrontPage}}

		\lfoot{\emph{\MakeUppercase{ATCS Report (Part I)}}}

		\renewcommand{\headrulewidth}{0.4pt}
		\renewcommand{\footrulewidth}{0.4pt}
	}

	
	\fancypagestyle{mymain}{
	
		\pagenumbering{arabic}
			\rhead{}
			\lhead{}
			\cfoot{}

		\rfoot{ Pagina \thepage~di \pageref{LastPage} }

		\lfoot{\emph{\MakeUppercase{#1}}\vspace{-1mm} }

		\renewcommand{\headrulewidth}{0.4pt}
		\renewcommand{\footrulewidth}{0.4pt}
	}

}
